<Defs>

  <!--===== HRK_KVector_1G (Classic) =====-->
  <ThingDef ParentName="BaseBullet">
    <defName>HRK_Bullet_KVector_1G</defName>
    <label>KRISS Vector Gen.1 bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
